            <dependency>
                <groupId>com.yunlsp.framework.components</groupId>
                <artifactId>common-api</artifactId>
                <version>${mixmicro-common.kit.version}</version>
            </dependency>

            <dependency>
                <groupId>com.yunlsp.framework.components</groupId>
                <artifactId>exception-api</artifactId>
                <version>${mixmicro-exception.kit.version}</version>
            </dependency>

            <dependency>
                <groupId>com.yunlsp.framework.components</groupId>
                <artifactId>logger-api</artifactId>
                <version>${mixmicro-logger.kit.version}</version>
            </dependency>
        </dependencies>
