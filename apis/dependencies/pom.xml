        <mixmicro-common.kit.version>1.0.0.BUILD-SNAPSHOT</mixmicro-common.kit.version>
        <mixmicro-exception.kit.version>1.0.0.BUILD-SNAPSHOT</mixmicro-exception.kit.version>
        <mixmicro-logger.kit.version>1.0.0.BUILD-SNAPSHOT</mixmicro-logger.kit.version>

